# Vulkan SDK
echo \-> Vulkan SDK
export VULKAN_SDK_VERSION = 1.2.162.1
export VULKAN_SDK = ~/Development/vulkan-sdk/$VULKAN_SDK_VERSION/x86_64
export PATH = $VULKAN_SDK/bin:$PATH
export LD_LIBRARY_PATH = $VULKAN_SDK/lib:$LD_LIBRARY_PATH
export VK_LAYER_PATH = $VULKAN_SDK/etc/vulkan/explicit_layer.d

# Decent Games Specific
echo \-> Decent Games
export COM_DECENTGAMES_ENV_SET = 1
export COM_DECENTGAMES_QUICKRUN_ENV_SET = 1
export COM_DECENTGAMES_QUICKRUN_DEBUG = 1

